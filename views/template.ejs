        }

        .date {
            margin-top: 14px;
            text-align: right;
            font-style: italic;
        }

        .signature img {
            width: 80px;
        }

        .top-right-curve {
            position: absolute;
            top: 0;
            right: 0;
            width: 40%;
            height: 4%;
            background: linear-gradient(to right, rgb(241, 244, 245), rgb(8, 133, 182));
            border-bottom-left-radius: 100%;
            overflow: hidden;
        }

        .bottom-left-curve {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40%;
            height: 2%;
            background: linear-gradient(to right, teal, lightgreen);
            border-top-right-radius: 100%;
            overflow: hidden;
        }

        @media print {
         
            body, html {
                margin: 0;
                padding: 0;
            }

            .container {
                width: 210mm; /* A4 width */
                height: 297mm; /* A4 height */
                margin: 0 auto;
                padding: 10mm;
                border: 1px solid #ccc;
                border-radius: 8px;
                background-color: white;
                box-shadow: none; 
                overflow: hidden; 
            }

            .top-right-curve, .bottom-left-curve {
                display: none; 
            }
        }
    </style>
</head>
